<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_graph"
    app:startDestination="@id/splashFragment2">

    <fragment
        android:id="@+id/splashFragment2"
        tools:layout="@layout/fragment_splash"
        android:name="com.leylayildiz.capstonee.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/SplashToMainGraph"
            app:destination="@id/main_graph" />
        <action
            android:id="@+id/SplashToSignIn"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.leylayildiz.capstonee.ui.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/SignInToSingUp"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/SignInToMainGraph"
            app:destination="@id/main_graph" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.leylayildiz.capstonee.ui.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/SignUpToMainGraph"
            app:destination="@id/main_graph" />
    </fragment>
    <include app:graph="@navigation/main_graph" />
</navigation>